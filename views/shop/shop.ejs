<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css files/shop.css">
    <style>
        .button-forms{
            display: inline-block;
        }
        .button-forms{
            display: inline-block;
        }
        .product-button{
            display: inline-block;
        }
        .pagination {
            text-align: center;
            margin-top: 50px;
        }
        .pagination a{
            text-decoration: none;
            color: black;
            margin: 5px;
            border: solid;
            border-color: black;
            padding: 10px;
            border-radius:10px;
            transition: 0.3s;
        }
        .pagination a:hover {
            transition: 0.3s;
            border-radius: 20px;
            padding: 15px;
            border-color: grey;
            color: grey;
        }
        .pagination a.current-page {
            border-color: black;
            color : white ;
            border-radius: 20px;
            padding: 15px;
            background-color: black ;
            pointer-events: none;

        }

    </style>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main class="main-products">
        <h1>products</h1>
        <div class="all-products-div">
            <%if (products.length > 0 ) { %>
                <%products.forEach((product) => { %>
            <article>
                <div class="product-div">
                    <header class="product-name">
                        <%=product.name%>
                    </header>
                    <div class="product-image-div">
                        <img class="product-image-inp" src="/<%=product.image%>" alt="">
                    </div>
                    <div class="product-price-dis">
                        <div class="product-price-div">
                          <b> $<%=product.price%> </b> 
                        </div>
                        <div class="product-description-div">
                            <%=product.description%>
                        </div>
                    </div>
                    <div class="product-button-div">
                        <% if (authenticated) { %>
                        <%- include('../includes/add-product-to-cart.ejs' , {product : product})%>
                        <% } %>
                        <form action="/product-details/<%=product._id %>" class="button-forms">
                            <button class="product-button" type="submit">
                                details
                            </button>
                        </form>
                    </div>
                </div>
            
            </article>
            <% }) %>
            <% } else { %>
                <h1>There are no products currently!</h1>
                <% }%>
    </main>
    <section class="pagination" >
        <% if (page !== 1) { %>
            <a href="/shop?page=1">1</a>
            <a href="/shop?page=<%= previousPage %>">previous page</a>
        <% } %>
            <a class="current-page" href="/shop?page=<%= page %>"><%= page %></a>
        <% if (nextPageExist) { %>
            <a href="/shop?page=<%= nextPage %>">next page</a>
        <% } %>
        <% if (page !== lastPage) { %>
            <a href="/shop?page=<%= lastPage %>"><%= lastPage %></a>
        <% } %>
        
    </section>
 
</body>
</html>