<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css files/shop.css">
    <style>
        .button-forms{
            display: inline-block;
        }
    </style>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main class="main-products">
        <h1>products</h1>
        <div class="all-products-div">
            <%if (products.length > 0 ) { %>
                <%products.forEach((prod) => { %>
            <article>
                <div class="product-div">
                    <header class="product-name">
                        <%=prod.name%>
                    </header>
                    <div class="product-image-div">
                        <img class="product-image-inp" src="<%=prod.image%>" alt="">
                    </div>
                    <div class="product-price-dis">
                        <div class="product-price-div">
                          <b> $<%=prod.price%> </b> 
                        </div>
                        <div class="product-description-div">
                            <%=prod.description%>
                        </div>
                    </div>
                    <div class="product-button-div">
                        <form action="/admin/edit-product/<%= prod._id %>" class="button-forms">
                            <button type="submit" class="product-button">
                                edit 
                            </button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        </form>
                        <form action="/admin/delete-product/<%= prod._id %>"  class="button-forms">
                            <button type="submit" class="product-button">
                                delete
                            </button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        </form>
                    </div>
                </div>
            
            </article>
            <% }) %>
            <% } else { %>
                <h1>There are no products currently!</h1>
                <% }%>
    </main>
 
</body>
</html>