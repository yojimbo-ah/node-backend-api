<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css files/product.css">
</head>
    <body>
        <%- include('../includes/nav.ejs')%>
        <main class="main-input-list">
        <h2>
            add your login info :
        </h2>
        <form action="/login" method="POST">
            <div class="small-div">
                <label class="label-input" for="email">
                    email :
                </label>
                <input class="input-bar" type="email" name="email" id="email">
            </div>
            <div class="small-div">
                <label class="label-input" for="password" name="password">
                    add your password :
                </label>
                <input class="input-bar" type="password" name="password" id="password">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            </div>
            <button class="input-button" type="submit">Login</button>
        </form>
        <a href="/reset">reset password</a>
    <% if (errorMessage) { %>
        <p>
            <%= errorMessage %>
        </p>
    <% } %>
    <% if (successMessage) { %>
        <p>
            <%= successMessage %>
        </p>
    <% } %>
    </main>
    </body>
</html>